<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/login_title" />

    <LinearLayout
        android:id="@+id/register_parent_form"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/register_name"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/register_parent_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_weight="6.5"
                android:background="@drawable/login_input_short"
                android:ems="10"
                android:hint="@string/hint_parent_name"
                android:inputType="textPersonName"
                android:textColorHint="#63c3b1"
                android:textSize="15sp" >
		
		        <requestFocus />
		    </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/register_nickname"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/register_parent_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="2dp"
                android:layout_weight="6.5"
                android:background="@drawable/login_input_short"
                android:ems="10"
                android:hint="@string/hint_parent_nickname"
                android:inputType="textPersonName"
                android:textColorHint="#63c3b1"
                android:textSize="15sp" >

		    </EditText>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/register_phone"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/register_parent_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="2dp"
                android:layout_weight="6.5"
                android:background="@drawable/login_input_short"
                android:ems="10"
                android:hint="@string/hint_parent_phone"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:textColorHint="#63c3b1"
                android:textSize="15sp" >

		    </EditText>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/register_children"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/register_parent_org"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="2dp"
                android:layout_weight="6.5"
                android:background="@drawable/login_input_short"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:hint="@string/hint_org"
                android:onClick="OnClickForAddInfo"
                android:textColorHint="#63c3b1"
                android:textSize="15sp"
                android:tag="register_parent_org_0" >

		    </EditText>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/register_children"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/register_parent_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="2dp"
                android:layout_weight="6.5"
                android:background="@drawable/login_input_short"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:hint="@string/hint_class"
                android:inputType="textPersonName"
                android:tag="register_parent_class_0"
                android:textColorHint="#63c3b1"
                android:textSize="15sp" >

		    </EditText>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/register_children"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/register_parent_childname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="2dp"
                android:layout_weight="6.5"
                android:background="@drawable/login_input_short"
                android:ems="10"
                android:hint="@string/hint_childname"
                android:tag="register_parent_childname_0"
                android:textColorHint="#63c3b1"
                android:textSize="15sp" >

		    </EditText>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/register_children"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/register_parent_birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="2dp"
                android:layout_weight="6.5"
                android:background="@drawable/login_input_short"
                android:ems="10"
                android:enabled="true"
                android:hint="@string/hint_birthday"
                android:tag="register_parent_birthday_0"
                android:inputType="number"
                android:textColorHint="#63c3b1"
                android:textSize="15sp" >

		    </EditText>

        </LinearLayout>
        
 

    </LinearLayout>

           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/register_children"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="invisible" />

            <Button
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="40dp"
	            android:layout_marginTop="2dp"
	            android:layout_weight="6.5"
	            android:background="@drawable/login_btnset"
	            android:onClick="OnAddChildForm"
	            android:text="@string/profile_addchildren"
	            android:textColor="#ffffff"
	            android:textSize="15sp" />

        </LinearLayout>
        
        
        
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/login_btnset"
            android:onClick="OnSpecificInfoFormed"
            android:tag="1"
            android:text="@string/finish"
            android:textColor="#ffffff"
            android:textSize="15sp" />
</LinearLayout>
</ScrollView>
</LinearLayout>