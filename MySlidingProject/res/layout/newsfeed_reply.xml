<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp" >

    <ImageView
        android:id="@+id/reply_profilepicture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginRight="5dip"
        android:contentDescription="@string/default_content_description"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

		<TextView
		    android:id="@+id/reply_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:lines="1"
		    android:text="@string/profile_childname"
		    android:textColor="#65c3b0"
		    android:textStyle="bold" />

        <TextView
            android:id="@+id/reply_firsttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/reply_name"
            android:text="@string/default_string"
            android:textColor="#6d6e70"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/reply_secondtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reply_name"
            android:layout_below="@+id/reply_name"
            android:layout_marginTop="3dp"
            android:text="@string/default_string"
            android:textColor="#6d6e70" />

        <TextView
            android:id="@+id/confirm_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reply_secondtext"
            android:layout_below="@id/reply_secondtext"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="#d0d2d3"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>