<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6ed4bf"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_confirm_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강수영"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/toast_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 선생님은"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:id="@+id/register_confirm_teacher_orgname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버그스유치원 (수원시 장안구 정자동)"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="의 선생님이 맞나요?"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:weightSum="4" >

            <Button
                android:id="@+id/confirm_teacher_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/login_btnset"
                android:onClick="OnConfirmTeacherResponse"
                android:text="@string/confirm"
            	android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6" >
            </LinearLayout>

            <Button
                android:id="@+id/confirm_teacher_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/login_btnset"
                android:onClick="OnConfirmTeacherResponse"
                android:text="@string/cancel"
            	android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
