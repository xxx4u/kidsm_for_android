<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6ed4bf" >
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="@string/register_newclass"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/addclass_newclass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_weight="6.5"
            android:background="@drawable/login_input_short"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="#63c3b1"
            android:textSize="15sp" >

      <requestFocus />
  		</EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="@string/register_newclassage"
            android:textColor="#ffffff" />

        <Spinner
      		android:id="@+id/addclass_classlevel"
      		android:layout_width="0dp"
      		android:layout_height="wrap_content"
      		android:layout_marginRight="40dp"
            android:layout_weight="6.5" />
        
    </LinearLayout>
</LinearLayout>