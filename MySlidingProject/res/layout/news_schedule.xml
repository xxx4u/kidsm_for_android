<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/general_cell_cal_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/news_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/news_schedule_icon"
            android:text="스케줄"
            android:textColor="#ff696d" />

        <ImageView
            android:id="@+id/news_schedule_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/cal_icon" />
        
        <TextView
            android:id="@+id/news_schedule_timelog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="2분전"
            android:textColor="#6d6e70"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/news_schedule_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/news_schedule_title"
            android:text="TextView" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/news_schedule_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="카이스트 면접 월 12시 40분 전산학동 E3-1 1층 1441호실 수험번호 3020404 카이스트 면접 월 12시 40분 전산학동 E3-1 1층 1441호실 수험번호 3020404 카이스트 면접 월 12시 40분 전산학동 E3-1 1층 1441호실 수험번호 3020404 카이스트 면접 월 12시 40분 전산학동 E3-1 1층 1441호실 수험번호 3020404 카이스트 면접 월 12시 40분 전산학동 E3-1 1층 1441호실 수험번호 3020404 카이스트 면접 월 12시 40분 전산학동 E3-1 1층 1441호실 수험번호 3020404 카이스트 면접 월 12시 40분 전산학동 E3-1 1층 1441호실 수험번호 3020404 카이스트 면접 월 12시 40분 전산학동 E3-1 1층 1441호실 수험번호 3020404" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/news_schedule_check"
                style="@style/CalendarChecker"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:checked="false"
                android:gravity="center"
                android:onClick="OnCheckSchedule"
                android:visibility="invisible" />

        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
