<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/login_title" />

    <TextView
        android:id="@+id/confirm_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="축하합니다!"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/register_finish_orgname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버그스 유치원(수원시 장안구 정자동)"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/register_finish_orgname"
            android:text="이"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <TextView
        android:id="@+id/toast_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="생성되었습니다.\n\n해당 기관의 선생님을 초대해주세요."
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n기관 코드번호"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/register_finish_orgcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FFFFFF"
        android:textColor="#ffffff"
        android:textSize="32sp" />
        
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_btnset"
            android:onClick="OnInviteTeacherClick"
            android:text="@string/invite"
            android:textColor="#ffffff"
            android:textSize="15sp" />

</LinearLayout>
